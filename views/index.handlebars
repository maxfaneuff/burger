<img src="" alt="burger_pic" height="200" width="200">

<h1 id="title">Eat-Da-Burger!</h1>

<section class="burgersAvail">
    <h2>Burgers Waiting to be Eaten</h2>
    {{#each burgers}} {{#unless devoured}} {{> burger-block devoured=true}} {{/unless}} {{/each}}
</section>

<section class="burgersDevoured">
    <h2>Burgers You've Eaten</h2>
    {{#each burgers}} {{#if devoured}} {{> burger-block devoured=false}} {{/if}} {{/each}}
</section>

<section class="burgersAdd">
    <h2>Add a burger</h2>
    <div class="form-group">
        <textarea name="addBurger" id="burgerText" placeholder="Add a burger here">
        </textarea>
    </div>

    <button type="submit" id="submit">Add a Burger!</button>
</section>